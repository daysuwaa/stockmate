generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"  
  url      = env("DATABASE_URL")
}

model User {
  id           String      @id @default(cuid())
  name         String
  email        String      @unique
  phone        String?     @unique
  website      String?
  avatar       String?
  address      String?
  passwordHash String
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  inventory    Inventory[]
}

model Inventory {
  id        String   @id @default(cuid())
  name      String
  category  String
  quantity  Int
  status    String
  price     Float
  updated   DateTime @updatedAt
  createdAt DateTime @default(now())
  userId    String
  user      User @relation(fields: [userId], references: [id])
}
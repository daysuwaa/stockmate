generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "sqlite"  
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  phone         String   @unique
  website       String?
  avatar        String?
  address       String? 
  passwordHash  String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Inventory {
  id        String   @id @default(cuid())
  name      String
  category  String
  quantity  Int
  status    String
  price     Float
  updated   DateTime @default(now())
  createdAt DateTime @default(now())
}